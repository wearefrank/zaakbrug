<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="SoapEndpointProxy_BeantwoordVraag"
        active="${SoapEndpointProxy_BeantwoordVraag.Active}"
        description="This adapter will send the message to SSD">

        <Receiver name="SoapEndpointProxy_BeantwoordVraag">
            <WebServiceListener name="SoapEndpointProxy_BeantwoordVraag" address="${zaakbrug.soap.proxy.beantwoord-vraag.endpoint}" soap="false"/>
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit name="EXIT" state="SUCCESS"/>
                <Exit name="EXCEPTION" state="ERROR"/>
            </Exits>

            <SenderPipe
                    name="SendToProxy">
                <WebServiceSender
                        name="SendToProxySender"
                        soap="false"
                        soapActionParam="SOAPAction"
                        url="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.url}"
                        timeout="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.timeout}"
                        verifyHostname="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.verifyHostname}"
                        allowSelfSignedCertificates="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.allowSelfSignedCertificates}"
                        disableCookies="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.disableCookies}"
                        ignoreCertificateExpiredException="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.ignoreCertificateExpiredException}"
                        truststore="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.truststore.uri}"
                        truststoreAuthAlias="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.truststore.authAlias}"
                        truststoreType="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.truststore.type}"
                        keystore="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.keystore.uri}"
                        keystoreAlias="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.keystore.alias}"
                        keystoreAuthAlias="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.keystore.authAlias}"
                        keystoreType="${zaakbrug.soap.proxy.beantwoord-vraag.proxy.keystore.type}">
                    <Param name="SOAPAction" sessionKey="SOAPAction" />
                </WebServiceSender>
                <Forward name="success" path="EXIT" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>
        </Pipeline>
    </Adapter>
</Module>