<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="GenereerIdentificatieEmulator"
        active="${GenereerIdentificatieEmulator.Active}"
        description="functioining as id generator for zaak or document identifiers">

        <Receiver name="GenereerIdentificatieEmulator">
            <JavaListener name="GenereerIdentificatieEmulator" returnedSessionKeys="Error" />
        </Receiver>

        <Pipeline>

            <Exits>
                <Exit name="EXIT" state="SUCCESS" />
                <Exit name="EXCEPTION" state="ERROR" />
            </Exits>

            <SenderPipe 
                name="GetGlobalConfigFromLocalFS"
                storeResultInSessionKey="GlobalConfig"
                active="${reseveer_identificatie_openzaak_switch.Active}"
                >
                <IbisLocalSender
                    name="CallImportFromLocalFS"
                    javaListener="ImportFromLocalFS"
                    returnedSessionKeys="Error"
                    >
                    <Param name="FileName" value="${FilePath_1}" />                   
                </IbisLocalSender>
                <Forward name="success" path="CallGetRsin"/>
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>

            <SenderPipe 
                name="CallGetRsin"
                storeResultInSessionKey="Rsin"
                active="${reseveer_identificatie_openzaak_switch.Active}">
                <IbisLocalSender
                    name="CallGetRsinSender"
                    javaListener="GetRsinByGemeenteCode"
                    returnedSessionKeys="Error">
                    <Param name="GemeenteCode" sessionKey="originalMessage" xpathExpression="/*/stuurgegevens/zender/organisatie" />
                </IbisLocalSender>
                <Forward name="success" path="createRequestBody"/>
                <Forward name="exception" path="EXCEPTION"/>
            </SenderPipe>
            
            <ReplacerPipe name="createRequestBody"
                storeResultInSessionKey="requestBody"
                getInputFromFixedValue="{&quot;bronorganisatie&quot;: &quot;?{Rsin}&quot;, &quot;aantal&quot;: 1}"
                active="${reseveer_identificatie_openzaak_switch.Active}">
                <Param name="Rsin" sessionKey="Rsin" xpathExpression="//RSIN/text()"/>
                <Forward name="success" path="switcher" />
            </ReplacerPipe>

            <XmlSwitchPipe name="switcher" forwardNameSessionKey="IdentificatieType">
            </XmlSwitchPipe>

            <SenderPipe name="ZaakIdentificatie"
                storeResultInSessionKey="GetIdResult"
                active="!${reseveer_identificatie_openzaak_switch.Active}">
                <FixedQuerySender
                    query="UPDATE IDENTIFICATIE  SET IDENTIFICATIE=(IDENTIFICATIE + 1 ) WHERE TYPE=?{IdentificatieType}"
                    queryType="OTHER"
                    resultQuery="SELECT IDENTIFICATIE FROM IDENTIFICATIE WHERE TYPE  = 'ZaakIdentificatie'"
                />
                <Param name="IdentificatieType" sessionKey="IdentificatieType" />
                <Locker objectId="LockIdZaak" numRetries="-1" retryDelay="200" />
                <Forward name="success" path="CheckForDBResult" />
            </SenderPipe>

            <SenderPipe
                name="ZaakIdentificatie" active="${reseveer_identificatie_openzaak_switch.Active}"
                >
                <IbisLocalSender
                    name="PostZgwZaaknummer_reserverenSender"
                    javaListener="Zaken_PostZgwZaaknummer_reserveren"
                    returnedSessionKeys="Error,Authorization"
                    >
                </IbisLocalSender>
                <Param name="requestBody" sessionKey="requestBody"/>
                <Forward name="success" path="extractId" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>

            <SenderPipe name="DocumentIdentificatie"
                storeResultInSessionKey="GetIdResult" active="!${reseveer_identificatie_openzaak_switch.Active}">
                <FixedQuerySender
                    query="UPDATE IDENTIFICATIE  SET IDENTIFICATIE=( IDENTIFICATIE + 1) WHERE TYPE=?{IdentificatieType}"
                    queryType="OTHER"
                    resultQuery="SELECT IDENTIFICATIE FROM IDENTIFICATIE WHERE TYPE  = 'DocumentIdentificatie'"
                />
                <Param name="IdentificatieType" sessionKey="IdentificatieType" />
                <Locker objectId="LockIdDoc" numRetries="-1" retryDelay="200" />
                <Forward name="success" path="CheckForDBResult" />
            </SenderPipe>

            <SenderPipe
                name="DocumentIdentificatie" active="${reseveer_identificatie_openzaak_switch.Active}"
                >
                <IbisLocalSender
                    name="PostZgwDocumentnummer_reserverenSender"
                    javaListener="Zaken_PostZgwDocumentnummer_reserveren"
                    returnedSessionKeys="Error,Authorization"
                    >
                </IbisLocalSender>
                <Param name="requestBody" sessionKey="requestBody"/>
                <Forward name="success" path="extractId" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>

            <SenderPipe name="BesluitIdentificatie"
                active="!${reseveer_identificatie_openzaak_switch.Active}"
                storeResultInSessionKey="GetIdResult">
                <FixedQuerySender
                    query="UPDATE IDENTIFICATIE  SET IDENTIFICATIE=( IDENTIFICATIE + 1) WHERE TYPE=?{IdentificatieType}"
                    queryType="OTHER"
                    resultQuery="SELECT IDENTIFICATIE FROM IDENTIFICATIE WHERE TYPE  = 'BesluitIdentificatie'"
                />
                <Param name="IdentificatieType" sessionKey="IdentificatieType" />
                <Locker objectId="LockIdBesluit" numRetries="-1" retryDelay="200" />
                <Forward name="success" path="CheckForDBResult" />
            </SenderPipe>

            <IfPipe name="CheckForDBResult"
                active="!${reseveer_identificatie_openzaak_switch.Active}"
                xpathExpression="string-length(result/rowset/row[@number='0']) > 0"
            >
                <Forward name="then" path="CreateNewId" />
                <Forward name="else" path="InsertIdentificatie" />
            </IfPipe>


            <XsltPipe name="CreateNewId" styleSheetName="Common/xsl/CreateIdentication.xslt"
                active="!${reseveer_identificatie_openzaak_switch.Active}"
                storeResultInSessionKey="newId" omitXmlDeclaration="true">
                <Param name="IdentificatieType" sessionKey="IdentificatieType" />
                <Param name="zaak-identificatie-template"
                    value="${zaakbrug.zgw.zaak-identificatie-template}" />
                <Param name="document-identificatie-template"
                    value="${zaakbrug.zgw.document-identificatie-template}" />
                <Param name="besluit-identificatie-template"
                    value="${zaakbrug.zgw.besluit-identificatie-template}" />
                <Forward name="success" path="SetExitMessage" />
            </XsltPipe>


            <SenderPipe name="InsertIdentificatie"
                active="!${reseveer_identificatie_openzaak_switch.Active}">
                <FixedQuerySender
                    query="INSERT INTO IDENTIFICATIE (IDENTIFICATIE, TYPE) VALUES (0, ?{IdentificatieType})"
                    queryType="OTHER"
                />
                <Param name="IdentificatieType" sessionKey="IdentificatieType" />
                <Forward name="success" path="switcher" />
            </SenderPipe>
            
            <JsonXsltPipe name="extractId" 
                xpathExpression="//*[@key='zaaknummer']/text() | //*[@key='identificatie']/text()" 
                storeResultInSessionKey="newId"
                outputType="TEXT"
                active="${reseveer_identificatie_openzaak_switch.Active}">
                <Forward name="success" path="SetExitMessage" />
            </JsonXsltPipe>


            <PutInSessionPipe
                name="SetExitMessage"
                getInputFromSessionKey="newId">
                <Forward name="success" path="EXIT" />
            </PutInSessionPipe>
        </Pipeline>
    </Adapter>
</Module>