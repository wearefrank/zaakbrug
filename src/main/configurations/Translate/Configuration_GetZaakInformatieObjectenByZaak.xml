<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="GetZaakInformatieObjectenByZaak"
        active="${GetZaakInformatieObjectenByZaak.Active}"
        description="">

        <Receiver name="GetZaakInformatieObjectenByZaak">
            <JavaListener name="GetZaakInformatieObjectenByZaak" returnedSessionKeys="Error" />
        </Receiver>

        <Pipeline>  
            <Exits>
                <Exit name="EXIT" state="SUCCESS"/>
                <Exit name="EXCEPTION" state="ERROR"/>
            </Exits>

            <SenderPipe name="GetAuthorizationHeaderForZakenApi"
                getInputFromFixedValue="&lt;dummy/&gt;">
                <IbisLocalSender
                    name="GetAuthorizationHeaderForZakenApiSender"
                    javaListener="GenerateAuthorizationHeaderForZakenApi"
                    returnedSessionKeys="Error,Authorization">
                </IbisLocalSender>
                <Forward name="success" path="GetZaakInformatieObjectenByZaak" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>

			<SenderPipe name="GetZaakInformatieObjectenByZaak"
                getInputFromFixedValue="&lt;dummy/&gt;">
				<HttpSender 
					name="GetZaakInformatieObjectenByZaakSender" 
					methodType="GET"
					headersParams="Authorization,Accept-Crs"
                    timeout="${zaakbrug.zgw.zaken-api.timeout}"
				/>
                <Param name="url" value="${zaakbrug.zgw.zaken-api.root-url}zaakinformatieobjecten"/>
                <Param name="zaak" sessionKey="ZaakUrl"/>
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Authorization"  sessionKey="Authorization" />
                <Forward name="success" path="JsonToXml" />
                <Forward name="exception" path="ErrorJsonToXml" />
			</SenderPipe>
            <JsonPipe name="ErrorJsonToXml">
                <Forward name="success" path="buildErrorMsg" />
            </JsonPipe>
            <XsltPipe name="buildErrorMsg"
                styleSheetName="Common/xsl/ParseNegativeHttpResult.xsl">
                <Param name="senderPipeName" value="GetZaakInformatieObjectenByZaak" />
                <Forward name="success" path="EXCEPTION" />
            </XsltPipe>

            <JsonPipe name="JsonToXml">
                <Forward name="success" path="UnwrapZgwZaakInformatieObjectToList"/>
            </JsonPipe>

            <XsltPipe
                name="UnwrapZgwZaakInformatieObjectToList"
                styleSheetName="ZaakDocument/xsl/UnwrapZgwZaakInformatieObjectToList.xslt"
                >
                <Param name="List" value="ZgwZaakInformatieObjecten"/>
                <Param name="Type" value="ZgwZaakInformatieObject"/>
                <Forward name="success" path="EXIT"/>
                <Forward name="exception" path="EXCEPTION"/>
            </XsltPipe>
        </Pipeline>
    </Adapter>
</Module>