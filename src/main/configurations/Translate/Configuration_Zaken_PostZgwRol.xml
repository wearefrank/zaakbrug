<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="Zaken_PostZgwRol"
        active="${Zaken_PostZgwRol.Active}"
        description="">

        <Receiver name="Zaken_PostZgwRol">
            <JavaListener name="Zaken_PostZgwRol"/>
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit name="EXIT" state="SUCCESS"/>
                <Exit name="EXCEPTION" state="ERROR"/>
            </Exits>

            <XsltPipe
                name="AddZaakUrl"
                removeNamespaces="true"
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_LK01/xsl/AddZaakUrl.xsl"
                >
                <Param name="ZaakUrl" sessionKey="ZaakUrl"/>
                <Forward name="success" path="BetrokkeneTypeSwitch"/>
            </XsltPipe>

            <XmlSwitchPipe 
                name="BetrokkeneTypeSwitch"
				xpathExpression="/zgwRol/betrokkeneType"
                />

            <Json2XmlValidatorPipe
                name="natuurlijk_persoon"
                schema="CreeerZaak_LK01/xsd/ZgwRolNatuurlijkPersoon.xsd"
                root="zgwRol"
                outputFormat="JSON"
                deepSearch="true"
                throwException="true">
                <Forward name="success" path="PostZgwRol"/>
            </Json2XmlValidatorPipe>

            <Json2XmlValidatorPipe
                name="medewerker"
                schema="CreeerZaak_LK01/xsd/ZgwRolMedewerker.xsd"
                root="zgwRol"
                outputFormat="JSON"
                deepSearch="true"
                throwException="true">
                <Forward name="success" path="PostZgwRol"/>
            </Json2XmlValidatorPipe>

            <Json2XmlValidatorPipe
                name="niet_natuurlijk_persoon"
                schema="CreeerZaak_LK01/xsd/ZgwRolNietNatuurlijkPersoon.xsd"
                root="zgwRol"
                outputFormat="JSON"
                deepSearch="true"
                throwException="true">
                <Forward name="success" path="PostZgwRol"/>
            </Json2XmlValidatorPipe>

            <Json2XmlValidatorPipe
                name="vestiging"
                schema="CreeerZaak_LK01/xsd/ZgwRolVestiging.xsd"
                root="zgwRol"
                outputFormat="JSON"
                deepSearch="true"
                throwException="true">
                <Forward name="success" path="PostZgwRol"/>
            </Json2XmlValidatorPipe>

            <SenderPipe name="PostZgwRol" 
                storeResultInSessionKey="PostZgwRolResult">
				<HttpSender 
					name="PostZgwRolSender"
					methodType="POST"
					headersParams="Authorization,Accept-Crs,Content-Crs"
					url="${zaakbrug.zgw.zaken-api.root-url}rollen"
                    contentType="application/json"
                    timeout="${zaakbrug.zgw.zaken-api.timeout}"
                    truststore="${zaakbrug.zgw.zaken-api.truststore.url}"
                    truststoreType="${zaakbrug.zgw.zaken-api.truststore.type}"
                    truststoreAuthAlias="${zaakbrug.zgw.zaken-api.truststore.auth-alias}"
                    verifyHostname="${zaakbrug.zgw.zaken-api.verify-hostname}"
                    allowSelfSignedCertificates="${zaakbrug.zgw.zaken-api.allow-self-signed-cert}"
                    ignoreCertificateExpiredException="${zaakbrug.zgw.zaken-api.ignore-expired-cert}"
                    maxExecuteRetries="5"
				/>
                <Param name="Accept-Crs" value="EPSG:4326"/>
                <Param name="Content-Crs"  value="EPSG:4326"/>
                <Param name="Authorization" value="Bearer @@zaken-api.jwt@@" />
                <Forward name="success" path="EXIT" />
                <Forward name="exception" path="EXCEPTION" />
			</SenderPipe>
        </Pipeline>
    </Adapter>
</Module>
